<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/image"
    android:layout_height="match_parent"
    tools:context=".ImageUpFragment">

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="52dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Now Playing"
        android:id="@+id/image_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="italic"
        android:id="@+id/tv_talk"
        android:layout_marginBottom="72dp"
        android:fontFamily="@font/abeezee"
        android:layout_marginStart="28dp"
        android:textSize="34sp"
        android:textColor="@color/white"
        android:text="Talk Me Down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="italic"
        android:fontFamily="@font/abeezee"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:text="Blue Neighbourhood"
        app:layout_constraintStart_toStartOf="@+id/tv_talk"
        app:layout_constraintTop_toBottomOf="@+id/tv_talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>